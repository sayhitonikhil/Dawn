<script>
  document.addEventListener("DOMContentLoaded", function (){
  let moneySubtotal = document.getElementById("moneySubtotal");
  let spanMoneySubtotal = moneySubtotal.querySelector("span");
  let productQuantityInput = document.getElementById("productQuantityInput");

  let innerText;
  let startIndex;
  let endIndex;
  let extractedText;
  let withoutCommaExtractedText;
  let currencySymbol;
  let currencySymbolCode;

  function updateSubtotal() {
    let updatedPrice = withoutCommaExtractedText * productQuantityInput.value;
    let finalPrice = currencySymbol + updatedPrice.toFixed(2) + " " + currencySymbolCode;
    spanMoneySubtotal.innerText = finalPrice;
  }

  setTimeout(function (){
    innerText = spanMoneySubtotal.innerText;
    startIndex = 1;
    endIndex = innerText.length - 3;
    extractedText = innerText.substring(startIndex, endIndex);
    withoutCommaExtractedText = extractedText.replace(/,/g, '');
    currencySymbol = innerText[0];
    currencySymbolCode = innerText.substring(innerText.length - 3);

    productQuantityInput.addEventListener("change", updateSubtotal);
  }, 1500);
});

</script>